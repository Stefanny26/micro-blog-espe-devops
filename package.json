{
  "name": "micro-blog-espe",
  "version": "1.0.0",
  "description": "Micro-Blog Institucional para ESPE - DevOps Project",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "cd backend && npm run dev",
    "test": "cd backend && npm test",
    "build": "npm run build:frontend",
    "build:frontend": "mkdir -p dist && cp -r frontend/* dist/",
    "install-deps": "cd backend && npm install",
    "heroku-postbuild": "cd backend && npm install",
    "deploy:netlify": "npm run build && netlify deploy --prod",
    "preview:netlify": "npm run build && netlify deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Stefanny26/micro-blog-espe-devops.git"
  },
  "keywords": [
    "micro-blog",
    "devops",
    "espe",
    "express",
    "nodejs"
  ],
  "author": "ESPE DevOps Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
